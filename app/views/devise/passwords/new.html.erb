<div class="bg-container">
<div class="container">
  <div class="test">
  <div class="pw-box col-md-8 col-md-offset-2">
    <div class="col-sm-4 pw-welcome">
      <%= image_tag("icons/key.svg") %>
    </div>
    <div class="col-sm-8 pw-form">
      <h2>Wachtwoord vergeten?</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="actions">
          <%= f.submit "Verzenden", class:"pull-right button-pink"%>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
  </div>
</div>
</div>
