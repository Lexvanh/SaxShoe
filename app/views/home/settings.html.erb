<%= render 'home/sidebar' %>

<%=image_tag("top-image.png", class: "top-page-image") %>

<div class="content-container">  
	
	<div class="content-info">
		<%= render 'home/gobackandsignout' %>

		<h2>Je bent hier:</h2>
		<h1>Instellingen</h1>
		<h3>Instellingen van de applicatie</h3>
	</div>
	<div class="content-patients">
		<div class="settings-header">
			<div class="col-sm-1">
				<div class="img-circle-purple">
					<div class="img-circle-pink">
						<img src="http://placehold.it/90x90" class="img-circle">
					</div>
				</div>
			</div>

			<div class="col-sm-3">
				<h3>Account van ZORGGEVER</h3>
			</div>

			<div class="col-sm-1 pull-right" style="border-left: 2px solid grey">
				<%= image_tag("icons/trash.svg")%> <br>
				<%= image_tag("icons/edit.svg")%>
			</div>

			<div class="col-sm-3 pull-right">
				<p>Gebruikersnaam: <br>
				Wachtwoord: <br>
				E-mailadres: </p>
			</div>

		</div>

		<div class="patient-items">
			<div class="patients-item" style="border: none !important;">
				<div class="col-sm-5"><h2>Overzicht zorggevers - zorggever toevoegen</h2></div>
				<div class="col-sm-3 pull-right"> <%= button_to("Toevoegen", new_user_signed_in_path, class:"pull-right", method: :get) %> </div>
			</div>

			<div class="patients-item signup">
				<div class="col-sm-2"> <%= image_tag("icons/avatar.svg") %></div>
				<div class="col-sm-5"> 
					<p>Voor- en achternaam <span class="pull-right">E-mailadres</span> </p>
					<p>Gebruikersnaam <span class="pull-right">Wachtwoord</span></p>
					<input type="file" name="file" id="file" class="inputfile" />
          <label for="file">Upload een profiel foto</label>
				</div>
				<div class="col-sm-5">
					<button class="button-bright pull-right">Opslaan</button>
				</div>
			</div>

			<div class="patients-item">
				<div class="col-sm-2"> <%= image_tag("icons/avatar.svg") %></div>
				<div class="col-sm-4"><p>Willie Rode</p></div>
				<div class="col-sm-4"><p>Enkel</p></div>
				<div class="col-sm-2"> <%= image_tag("icons/cross.svg") %></div>
			</div>
			<div class="patients-item">
				<div class="col-sm-2"> <%= image_tag("icons/avatar.svg") %></div>
				<div class="col-sm-4"><p>Willie Rode</p></div>
				<div class="col-sm-4"><p>Enkel</p></div>
				<div class="col-sm-2"> <%= image_tag("icons/cross.svg") %></div>
			</div>
		</div>
	</div>
</div>
