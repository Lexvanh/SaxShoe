<div class="bg-container">
<div class="container">
  <div class="test">
  <div class="login-box col-sm-8 col-sm-offset-2 col-xs-12">
    <div class="col-sm-4 login-welcome">
      <h2>"Laten we beginnen!"</h2>
    </div>
    <div class="col-sm-8 login-form">

      <h2>Account Login</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, autofocus: true %>
        </div>
          <div class="field">
            <%= f.password_field :password, autocomplete: "off" %>
          </div>

          
            <div class="field">
              <% if devise_mapping.rememberable? -%>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              <% end -%>
              <%= link_to "Wachtwoord vergeten?", new_view_password_path, class:"pull-right" %>
            </div>

          <div class="actions">
            <%= f.submit "Login" %>
          </div>
        <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
  </div>
</div>
</div>