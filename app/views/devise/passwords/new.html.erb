<div class="container">
  <div class="test">
  <div class="login-box col-md-8 col-md-offset-2">
    <div class="col-sm-4 login-welcome">
      <span><h2>Wachtwoord vergeten?</h2></span>
    </div>
    <div class="col-sm-8 login-form">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Mail het nieuwe Wachtwoord" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
    </div>
  </div>
  </div>
</div>

